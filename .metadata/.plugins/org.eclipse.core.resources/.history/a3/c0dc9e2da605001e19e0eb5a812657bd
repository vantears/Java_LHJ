package day7.practice;

public class StarEx2 {

	public static void main(String[] args) {
		
		int i = 1, j;
		for(i = 1; i <= 4; i++) {
			for(j = 1; j <= i; j++) {
				System.out.print('*');
				}
			System.out.println();
			}
		for(; i >= 1; i--) {
			for(j = 1; j <= i; j++) {
				System.out.print('*');
				}
			System.out.println();
			}
		}
	}
