package day15.practice.shop.product;

public class salesHistory {
	private customer customer;
	private product product;
	int amount;
	int price;
	
	public salesHistory(customer customer, product product, int amount, int price) {
		this.customer = customer;
		this.product = product;
		this.amount = amount;
		this.price = price;

	}
	
	public void printHistory() {
		System.out.println("Customer : " + this.customer.getName());
		System.out.println("Product : " + this.product.getProductName());
		System.out.println("Quantity : " + this.amount);
		System.out.println("Total purchase : $" + this.price);
	}
}
