package day15.practice.shop.controller;

import java.util.Scanner;
import day15.practice.shop.product.*;

public class shopManager {
	
	Scanner sc = new Scanner(System.in);
	
	public void run() {
		
		int menu = 0;
		
		do {
			printMenu();//print the menu list.
			menu = sc.nextInt();
			runMenu(menu);
		}while(menu != 6);
		
		sc.close();
	}
	
	private void printMenu() {
		System.out.println("=========================");
		System.out.println("-MENU-");
		System.out.println("1. Sell products.");
		System.out.println("2. Store new products.");
		System.out.println("3. Search products");
		System.out.println("4. Check the sales figures");
		System.out.println("5. Register a customer");
		System.out.println("6. Quit");
		System.out.print("Choose an option in the menu : ");
	}
	
	private void runMenu(int menu) {
		switch(menu) {
		case 1:
			sellSubMenu();
			break;
		case 2:
			storeSubMenu();
			break;
		case 3:
			System.out.println("Searching products!");
			break;
		case 4:
			System.out.println("Checking the sales figures!");
			break;
		case 5:
			System.out.println("Registering a customer!");
			break;
		case 6:
			System.out.println("Quitting the program!");
			break;
		default :
			System.out.println("Wrong option!");
		}
	}
	
	private String printProduct(int product) {
		switch(product) {
		case 1:
			return "TV";
		case 2:
			return "Airconditioner";
		case 3:
			return "Radio";
		}
		return "";
	}
	
	private void sellSubMenu() {
		String name;
		int product;
		int quantity;
		System.out.print("Enter the customer name : ");
		name = sc.next();
		System.out.println("1. TV");
		System.out.println("2. Airconditioner");
		System.out.println("3. Radio");
		System.out.print("Choose a product to sell : ");
		product = sc.nextInt();
		if(product > 3 || product < 1) {
			System.out.println("Wrong product number!");
			return;
		}
		System.out.print("How many of the product is going to be sold? : ");
		quantity = sc.nextInt();
		//sellProduct(product, quantity);
		System.out.println(name + " has bought " + quantity + " " + printProduct(product) + "(s)");
		
	}
	
	private void storeSubMenu() {
		String productName;
		String modelName;
		int price;
		int amount;
		String category;
		System.out.println("Enter the product name, model name, price, amount, category : ");
		productName = sc.next();
		modelName = sc.next();
		price = sc.nextInt();
		amount = sc.nextInt();
		category = sc.next();
		product product = new product(productName, modelName, price, amount, category);
		product.printProduct();
		
		
	}
	
	private void searchSubMenu() {
		
	}
	private void salesSubMenu() {
		
	}
	private void registerSubMenu() {
		String name;
		System.out.print("Enter the customer's name : ");
		name = sc.next();
	}
}
