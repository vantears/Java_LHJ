package day15.practice.shop.controller;

import java.util.Scanner;

public class shopManager {
	
	Scanner sc = new Scanner(System.in);
	
	public void run() {
		
		int menu = 0;
		
		do {
			printMenu();//print the menu list.
			System.out.println("Choose an option in the menu : ");
			menu = sc.nextInt();
			switch(menu) {
			case 1:
				System.out.println("Checking Sales history!");
				break;
			case 2:
				System.out.println("Storing new products!");
				break;
			case 3:
				System.out.println("Searching products!");
				break;
			case 4:
				System.out.println("Checking the sales figures!");
				break;
			case 5:
				System.out.println("Quitting the program!");
				break;
			default :
				System.out.println("Wrong option!");
			}
		}while(menu != 5);
		
		sc.close();
	}
	
	private void printMenu() {
		System.out.println("-MENU-");
		System.out.println("1. Check the sales history.");
		System.out.println("2. Store new products.");
		System.out.println("3. Search products");
		System.out.println("4. Check the sales figures");
		System.out.println("5. Quit");
	}
}
