package day4.practice;
import java.util.Scanner;

public class IfseasonEx {

	public static void main(String[] args) {
		
		int month;
		String mon;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter a month: ");
		month = sc.nextInt();
		if (month == 4 | month == 5) {
			if (month == 3) {
				mon = month + "rd";
				System.out.println(mon + " month is spring");
			}
			mon = month + "th";
			System.out.println(mon + " month is spring");
		} else if (month == 6 | month == 7 | month == 8) {
			System.out.println(month + " month is summer");
		} else if (month == 9 | month == 10 | month == 11) {
			System.out.println(month + " month is fall");
		} else if (month == 12 | month == 1 | month == 2) {
			System.out.println(month + " month is winter");
		} else {
			System.out.println(month + " month is wrong");
		}
		sc.close();
	}

}
