class product {
	String title;
	int quantity = 0;
	int price;
	int sales;
	
	public product(String title, int quantity, int price) {
		this.title = title;
		this.quantity += quantity;
		this.price = price;
	}
	
	public product(String title, int quantity) {
		this.quantity += quantity;
	}

}
