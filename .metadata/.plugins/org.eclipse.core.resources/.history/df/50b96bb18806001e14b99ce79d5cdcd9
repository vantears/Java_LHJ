package day8.homework;
import java.util.Scanner;

public class MathodArimethicEx {

	public static void main(String[] args) {
		int a, b;
		char c;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter two numbers with an operator : ");
		a = sc.nextInt();
		c = sc.next().charAt(0);
		b = sc.nextInt();
		System.out.println(arithmetic(a, c, b));
		sc.close();

	}

	public static int arithmetic(int a, char c, int b) {
		if(c == '+') {
			return a + b;
		} else if(c == '-') {
			return a - b;
		} else if(c == '*') {
			return a * b;
		} else if(c == '/') {
			return a / b;
		} else if(c == '%') {
			return a % b;
		} else {
			return 0;
		}
	}
}
