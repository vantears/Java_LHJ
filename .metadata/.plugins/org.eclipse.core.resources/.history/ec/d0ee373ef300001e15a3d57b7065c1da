package day4.practice;
import java.util.Scanner;

public class IfArithmeticEx {
	
	public static void main(String[] args) {
		
		int num1, num2;
		char op;
		boolean check = true;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter first number : ");
		num1 = sc.nextInt();
		op = sc.next().charAt(0);
		while (check) {
		if (op != '+' && op != '-' && op != '*' && op != '/' && op != '%') {
			System.out.println("the operator is wrong. try other operator.");
			op = sc.next().charAt(0);
		 }	else {
			 check = false;
		 }
		}
		num2 = sc.nextInt();
		if (op == '+') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 + num2));
		} else if (op == '-') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 - num2));
		} else if (op == '*') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 * num2));
		} else if (op == '/') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 / num2));
		} else if (op == '%') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 % num2));
		}
		}
	}
