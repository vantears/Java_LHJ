package day15.practice.shop.product;

public class salesHistory {
	String name;
	String productName;
	int amount;
	int price;
	
	public salesHistory(String name, String productName, int amount, int price) {
		this.name = name;
		this.productName = productName;
		this.amount = amount;
		this.price = price;
	}
	
	public void printHistory() {
		System.out.println("---------------");
		System.out.println("Customer : " + this.name);
		System.out.println("Product : " + this.productName);
		System.out.println("Quantity : " + this.amount);
		System.out.println("Total purchase : $" + this.price);
	}
}
