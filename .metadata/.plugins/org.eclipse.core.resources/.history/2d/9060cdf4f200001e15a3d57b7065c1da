package day4.practice;
import java.util.Scanner;

public class IfArithmeticEx {
	
	public static void main(String[] args) {
		
		int num1, num2;
		char op;
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter first number : ");
		num1 = sc.nextInt();
		System.out.println("Enter operator : ");
		op = sc.next().charAt(0);
		System.out.println("Enter second number : ");
		num2 = sc.nextInt();
		while (true) {
		if (op == '+') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 + num2));
			sc.close();
			break;
		} else if (op == '-') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 - num2));
			sc.close();
			break;
		} else if (op == '*') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 * num2));
			sc.close();
			break;
		} else if (op == '/') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 / num2));
			sc.close();
			break;
		} else if (op == '%') {
			System.out.println(num1 + " " + op + " " + num2 + " is " + (num1 % num2));
			sc.close();
			break;
		} else {
			System.out.println("the operator is wrong. try other operator.");
			op = sc.next().charAt(0);
			continue;
		}
		}
	}

}
